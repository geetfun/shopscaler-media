%h1== Showing Picture #{@picture.id}
%p
  File details:
  %ul
    %li== File: #{@picture.source_file_name}
    %li== Content Type: #{@picture.source_content_type}
    %li== File size: #{@picture.source_file_size} bytes
    %li== State: #{@picture.state}
%p
  Original
  %br
  = image_tag @picture.url
%p
  Bigger
  %br
  = image_tag @picture.url(:bigger)
%p
  Big
  %br
  = image_tag @picture.url(:big)
%p
  Album
  %br
  = image_tag @picture.url(:album)
%p
  Album Preview
  %br
  = image_tag @picture.url(:album_preview)
%p
  Album Folder
  %br
  = image_tag @picture.url(:album_folder)
%p
  Profile
  %br
  = image_tag @picture.url(:profile)
%p
  Avatar
  %br
  = image_tag @picture.url(:avatar)